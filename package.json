{
  "private": true,
  "name": "@loopmode/create-electron-app-workspace",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "git@github.com:loopmode/create-electron-app.git",
  "author": "Jovica Aleksic <jovica.aleksic@loopmode.de>",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build --stream",
    "watch": "lerna run watch --parallel --stream",
    "rebuild": "rm -rf packages/**/lib && rm -f packages/**/.tsbuildinfo && yarn build",
    "test": "lerna run test --stream",
    "test:watch": "lerna run test:watch --stream",
    "test:run": "rm -rf foo && cross-env DEBUG=yeoman:generator packages/create-electron-app/lib/index.js"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}